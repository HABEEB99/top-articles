{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["cypress", "@testing-library/cypress", "node"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../src",
    "../src/vite-env.d.ts",
    "cypress/e2e/**/*.cy.ts",
    "./support",
    "./support/index.d.ts",
    "cypress/**/*.ts",
    "cypress/**/*.d.ts"
  ]
}
